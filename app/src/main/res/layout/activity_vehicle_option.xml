<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".cabs_n_more.outstation.VehicleOptionPage">

	<!--Toolbaar-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="8dp"
		android:orientation="horizontal"
		android:paddingBottom="8dp">

		<ImageView
			android:id="@+id/back_btn"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="center"
			android:paddingBottom="8dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingTop="8dp"
			android:layout_marginLeft="8dp"
			android:src="@drawable/arrow_back_red" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:layout_marginLeft="8dp"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/from"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="New Delhi"
					android:textSize="14sp"
					android:textColor="@color/black"
					android:fontFamily="@font/montserrat_semi_bold"/>

				<ImageView
					android:id="@+id/arrow"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_gravity="center"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp"
					android:background="@drawable/right_arrow"/>

				<TextView
					android:id="@+id/to"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Ajmer"
					android:textSize="14sp"
					android:textColor="@color/black"
					android:fontFamily="@font/montserrat_semi_bold"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/departure_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Wed, 15 Aug 6:30"
					android:textSize="11sp"
					android:singleLine="true"
					android:ellipsize="end"
					android:fontFamily="@font/montserrat_regular"/>

				<TextView
					android:id="@+id/return_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=" -- One way only"
					android:textSize="11sp"
					android:singleLine="true"
					android:ellipsize="end"
					android:fontFamily="@font/montserrat_regular"/>
			</LinearLayout>

		</LinearLayout>

		<ImageView
			android:id="@+id/edit"
			android:layout_marginRight="16dp"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center|end"
			android:gravity="end"
			android:src="@drawable/edit"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_certified_driver"
		android:padding="16dp"
		android:background="@color/light_yellow"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/certified_driver"/>

		<LinearLayout
			android:id="@+id/ll"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Certified Driver"
				android:textColor="@color/black"
				android:fontFamily="@font/montserrat_semi_bold"/>

			<TextView
				android:layout_marginTop="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:text="All drivers are well trained and certified."
				android:fontFamily="@font/montserrat_regular"/>

		</LinearLayout>

		<ImageView
			android:id="@+id/cross"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:src="@drawable/cancel"/>
	</LinearLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/recycler_view_vehicle_option"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

</LinearLayout>