<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,ContentDescription,UnusedAttribute,RtlSymmetry"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp" >
    <ImageView
        android:id="@+id/station_dot"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:src="@drawable/select_tv_dot"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/station_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textSize="12sp"
        android:fontFamily="@font/gotham_book_regular"
        android:text="Indrapuram" />

     <TextView
         android:id="@+id/station_details"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="station details"
         android:textSize="12sp"
         android:visibility="invisible"
         android:layout_marginStart="15dp"
         android:layout_marginTop="6dp"
         android:textColor="#0000ff"
         android:layout_below="@id/station_tv" />

    <RelativeLayout
        android:id="@+id/rv_checkin_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentEnd="true" >
        <TextView
            android:id="@+id/dtime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:20PM"
            android:textSize="12sp"
            android:textColor="#0000ff" />
        <TextView
            android:id="@+id/atime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:40PM"
            android:layout_below="@id/dtime_tv"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fulltimetable_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Full timetable"
            android:layout_below="@id/atime_tv"
            android:layout_marginTop="3dp"
            android:textColor="#0000ff" />
    </RelativeLayout>

</RelativeLayout>