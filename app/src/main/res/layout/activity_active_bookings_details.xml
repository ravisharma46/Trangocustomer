<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:ignore="HardcodedText,SmallSp,UnusedAttribute,ContentDescription"
	tools:context=".cabs_n_more.outstation.ActiveBookingDetails">

	<!--Toolbaar-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:orientation="horizontal"
		android:paddingBottom="10dp">

		<ImageView
			android:id="@+id/back_btn"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="center"
			android:layout_marginTop="8dp"
			android:paddingLeft="8dp"
			android:paddingTop="8dp"
			android:paddingRight="8dp"
			android:paddingBottom="8dp"
			android:src="@drawable/arrow_back_red" />

		<TextView
			android:id="@+id/order_id"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:fontFamily="@font/montserrat_semi_bold"
			android:text="Order #123"
			android:textColor="@color/black"
			android:textSize="16sp" />
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/background4" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!--car details-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="vertical"
				android:paddingTop="24dp"
				android:paddingBottom="24dp">
				<ImageView
					android:id="@+id/image_vehicle"
					android:layout_width="200dp"
					android:layout_height="100dp"
					android:layout_gravity="center"
					android:src="@mipmap/mini" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginTop="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/montserrat_semi_bold"
						android:text="Mini"
						android:textColor="@color/black"
						android:textSize="14sp" />

					<TextView
						android:id="@+id/sample"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="4dp"
						android:layout_weight="1"
						android:fontFamily="@font/montserrat_semi_bold"
						android:text="(Indica, Micra, Ritz)"
						android:textColor="@color/black"
						android:textSize="12sp" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginTop="8dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/name2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/montserrat_regular"
						android:text="Hatchback" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="8dp"
						android:layout_marginRight="16dp"
						android:text="|" />

					<TextView
						android:id="@+id/person"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:drawableStart="@drawable/profile_16dp"
						android:drawablePadding="8dp"
						android:fontFamily="@font/gotham_book_regular"
						android:gravity="center|start"
						android:text="4+1" />
				</LinearLayout>

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/montserrat_semi_bold"
				android:paddingLeft="20dp"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
				android:text="Trip Details"
				android:textSize="14sp" />

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<!--address-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="horizontal"
				android:paddingLeft="20dp"
				android:paddingTop="20dp"
				android:paddingRight="16dp"
				android:paddingBottom="20dp">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="8dp"
						android:layout_height="8dp"
						android:layout_gravity="center"
						android:background="@drawable/circle"
						android:backgroundTint="@color/green" />

					<View
						android:layout_width="1dp"
						android:layout_height="72dp"
						android:layout_marginStart="4dp"
						android:background="@drawable/vertical_dotted_line" />

					<TextView
						android:layout_width="8dp"
						android:layout_height="8dp"
						android:layout_gravity="center"
						android:background="@drawable/circle"
						android:backgroundTint="@color/colorPrimary" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:layout_weight="1"
					android:orientation="vertical">
					<TextView
						android:id="@+id/origin"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:fontFamily="@font/gotham_book_regular"
						android:singleLine="true"
						android:text="Geeta Colony, New Delhi"
						android:textColor="@color/black"
						android:textSize="14sp" />

					<TextView
						android:id="@+id/distance"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="24dp"
						android:layout_weight="1"
						android:fontFamily="@font/gotham_book_regular"
						android:singleLine="true"
						android:text="Distance: 110 km"
						android:textColor="@color/yellow"
						android:textSize="12sp" />

					<TextView
						android:id="@+id/destination"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="24dp"
						android:fontFamily="@font/gotham_book_regular"
						android:singleLine="true"
						android:text="Agra"
						android:textColor="@color/black"
						android:textSize="14sp" />
				</LinearLayout>

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="@color/white"
				android:paddingLeft="20dp"
				android:paddingRight="16dp"
				android:layout_gravity="center"
				android:gravity="center"
				android:paddingTop="16dp"
				android:paddingBottom="16dp">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center"
					android:fontFamily="@font/montserrat_semi_bold"
					android:text="Approx. Fare"
					android:textColor="@color/black"
					android:textSize="13sp" />

				<TextView
					android:id="@+id/total_fare"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/montserrat_semi_bold"
					android:text="Rs. 0000"
					android:textColor="@color/black"
					android:textSize="13sp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/montserrat_regular"
					android:text="(Rs. 12/km)"
					android:textSize="10sp"
					android:layout_marginStart="4dp"/>

			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<RadioGroup
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:checkedButton="@id/one_way"
				android:background="@color/white"
				android:orientation="horizontal"
				android:padding="16dp">

				<androidx.appcompat.widget.AppCompatRadioButton
					android:id="@+id/one_way"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:enabled="false"
					android:buttonTint="@color/colorPrimary"
					android:checked="true"
					android:fontFamily="@font/montserrat_semi_bold"
					android:text="One Way"
					android:textColor="@color/black2"
					android:textSize="14sp" />

				<androidx.appcompat.widget.AppCompatRadioButton
					android:id="@+id/round_trip"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:enabled="false"
					android:buttonTint="@color/colorPrimary"
					android:fontFamily="@font/montserrat_semi_bold"
					android:text="Round Trip"
					android:textColor="@color/black2"
					android:textSize="14sp" />
			</RadioGroup>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/gotham_book_regular"
				android:paddingLeft="20dp"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
				android:gravity="center|start"
				android:text="Night charges would be extra"
				android:textSize="10sp"
				android:drawableStart="@drawable/info"
				android:drawablePadding="16dp"/>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<!--driving date-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="20dp"
				android:paddingRight="16dp"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
				android:background="@color/white"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Driving Date"
					android:textColor="@color/black"
					android:fontFamily="@font/montserrat_semi_bold"
					android:textSize="14sp"/>

				<LinearLayout
					android:layout_marginTop="16dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_marginTop="8dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:drawablePadding="12dp"
							android:textSize="12sp"
							android:drawableStart="@drawable/green_circle"
							android:text="Departure : 00 July, 2018"
							android:textColor="@color/black"
							android:fontFamily="@font/montserrat_regular"/>

						<TextView
							android:layout_marginTop="12dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:drawablePadding="12dp"
							android:textSize="12sp"
							android:drawableStart="@drawable/red_circle"
							android:text="One way only"
							android:fontFamily="@font/montserrat_regular"/>
					</LinearLayout>

					<LinearLayout
						android:layout_marginTop="-4dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_marginRight="16dp"
						android:orientation="vertical">
						<ImageView
							android:layout_width="44dp"
							android:layout_height="44dp"
							android:src="@drawable/time"/>
						<TextView
							android:layout_marginTop="4dp"
							android:gravity="center"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/black"
							android:textSize="14sp"
							android:fontFamily="@font/gotham_book_regular"
							android:text="0:00:00"/>
					</LinearLayout>
					
				</LinearLayout>
				
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<!--contact details-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="20dp"
				android:paddingTop="16dp"
				android:paddingBottom="16dp"
				android:paddingRight="16dp"
				android:background="@color/white"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Contact Details"
					android:textColor="@color/black"
					android:fontFamily="@font/montserrat_semi_bold"
					android:textSize="16sp"/>

				<LinearLayout
					android:layout_marginTop="16dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Mini"
							android:textColor="@color/black"
							android:fontFamily="@font/montserrat_semi_bold"
							android:textSize="14sp"/>

						<RatingBar
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="8dp"
							android:numStars="5"
							android:isIndicator="true"
							android:rating="4"
							android:stepSize="0.5"
							android:progressTint="@color/yellow"
							style="?android:attr/ratingBarStyleSmall" />
						
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_marginTop="-4dp"
						android:layout_marginRight="24dp"
						android:orientation="vertical">
						<ImageView
							android:layout_width="40dp"
							android:layout_height="44dp"
							android:src="@drawable/phone_green"/>
						<TextView
							android:layout_marginTop="4dp"
							android:gravity="center"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textColor="@color/black"
							android:textSize="14sp"
							android:fontFamily="@font/gotham_book_regular"
							android:text="call"/>
					</LinearLayout>
					
				</LinearLayout>
				
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/background4" />

			<TextView
				android:layout_margin="8dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Remove"
				style="@style/button_style_1"/>
		</LinearLayout>
		
	</ScrollView>
	
</LinearLayout>
