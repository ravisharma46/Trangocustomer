<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Delhi Station"
                android:textColor="@color/black3"
                android:singleLine="true"
                android:textSize="11sp"
                android:fontFamily="@font/montserrat_medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance :"
                    android:textSize="11sp"
                    android:textColor="@color/black3"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="0 km"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:singleLine="true"/>


            </LinearLayout>



            <TextView
                android:id="@+id/parking_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid Parking"
                android:textColor="@color/black3"
                android:layout_marginTop="8dp"
                android:textSize="9sp"
                android:fontFamily="@font/montserrat_medium"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/bike"/>

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:src="@drawable/car"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vacant_slots"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/black3"
                android:lineSpacingMultiplier="0.8"
                android:fontFamily="@font/montserrat_medium" />

            <TextView
                android:id="@+id/vacant_bike_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:text="na"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/vacant_car_parking"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="na"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/navigate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:backgroundTint="@color/white"
                android:layout_marginBottom="8dp"
                android:src="@drawable/navigate_red"
                android:background="@drawable/circle"/>

            <TextView
                android:id="@+id/book_now"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"/>



        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>
